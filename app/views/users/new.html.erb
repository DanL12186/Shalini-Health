<%= form_for @user do | f | %>

  <%= f.label :first_name %>
  <%= f.text_field :first_name %> 
  <br>
  <%= f.label :last_name %>
  <%= f.text_field :last_name %> 
  <br>
  <%= f.label :email %>
  <%= f.text_field :email %> 
  <br>
  <%= f.label :home_phone %>
  <%= f.telephone_field :home_phone, pattern: "[0-9]{3}-[0-9]{3}-[0-9]{4}", required: true, placeholder: '617-555-1234' %>
  <br>
  <%= f.label :cell_number %>
  <%= f.telephone_field :cell, pattern: "[0-9]{3}-[0-9]{3}-[0-9]{4}", required: true, placeholder: '617-555-1234' %>
  <br>
  <br>
  <%= f.label :password %>
  <%= f.password_field :password %> 
  <br>
  <%= f.label :password_confirmation  %>
  <%= f.password_field :password_confirmation  %> 
  <br>
  <br>
  <%= f.submit %>
  
<% end %>